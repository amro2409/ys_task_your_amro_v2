<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="ltr"
    android:orientation="horizontal"
    android:weightSum="100.0">

    <androidx.cardview.widget.CardView
        android:id="@+id/hero_card"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="40.0"
        android:layout_margin="@dimen/_12sdp"
        app:cardBackgroundColor="@color/surface_container_low"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/login_card"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/_12sdp">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="wrap_content"

                android:layout_height="179dp"
                app:srcCompat="@drawable/onx_logo"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/svgexport"
                tools:ignore="ContentDescription" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/login_card"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="60.0"
        android:layout_margin="@dimen/_12sdp"
        android:minWidth="@dimen/_200sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/_2sdp">

            <com.google.android.material.textview.MaterialTextView
                style="@style/TextAppearance.Material3.DisplayLarge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/title_login"
                android:textColor="@color/primary" />

            <com.google.android.material.textview.MaterialTextView
                style="@style/TextAppearance.Material3.BodyLarge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:gravity="center"
                android:text="@string/lbl_message_body_login_hint_pls"
                android:textColor="@color/primary" />

            <LinearLayout
                android:id="@+id/input_pin_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageview_circle1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="6dp"
                        android:src="@drawable/circle" />

                    <ImageView
                        android:id="@+id/imageview_circle2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="6dp"
                        android:src="@drawable/circle" />

                    <ImageView
                        android:id="@+id/imageview_circle3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="6dp"
                        android:src="@drawable/circle" />

                    <ImageView
                        android:id="@+id/imageview_circle4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="6dp"
                        android:src="@drawable/circle" />

                    <ImageView
                        android:id="@+id/imageview_circle5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="6dp"
                        android:src="@drawable/circle" />

                    <ImageView
                        android:id="@+id/imageview_circle6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="6dp"
                        android:src="@drawable/circle" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/action_numbers_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <GridLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:columnCount="3"
                    android:rowCount="4">

                    <TextView
                        android:id="@+id/one_btn"
                        style="@style/NumbersCircleStyle"
                        android:text="1" />

                    <TextView
                        android:id="@+id/to_btn"
                        style="@style/NumbersCircleStyle"
                        android:text="2" />

                    <TextView
                        android:id="@+id/three_btn"
                        style="@style/NumbersCircleStyle"
                        android:text="3" />

                    <TextView
                        android:id="@+id/four_btn"
                        style="@style/NumbersCircleStyle"
                        android:text="4" />

                    <TextView
                        android:id="@+id/five_btn"
                        style="@style/NumbersCircleStyle"
                        android:text="5" />

                    <TextView
                        android:id="@+id/six_btn"
                        style="@style/NumbersCircleStyle"
                        android:text="6" />

                    <TextView
                        android:id="@+id/seven_btn"
                        style="@style/NumbersCircleStyle"
                        android:text="7" />

                    <TextView
                        android:id="@+id/eight_btn"
                        style="@style/NumbersCircleStyle"
                        android:text="8" />

                    <TextView
                        android:id="@+id/nin_btn"
                        style="@style/NumbersCircleStyle"
                        android:text="9" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/exit_btn"
                        style="@style/NumbersCircleStyle"
                        android:backgroundTint="@color/red"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_exit" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/zero_btn"
                        style="@style/NumbersCircleStyle"
                        android:text="0" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/delete_btn"
                        style="@style/NumbersCircleStyle"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_delete" />
                </GridLayout>
            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/tryDemoBtn"
                android:layout_width="@dimen/_120sdp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:backgroundTint="@color/surface_container_low"
                android:minHeight="@dimen/_30sdp"
                android:text="@string/try_demo_text_btn"
                android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                android:textColor="@color/primary"
                app:cornerRadius="@dimen/_16sdp"
                app:strokeColor="@color/primary"
                app:strokeWidth="1dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/setting_iv"
                    android:layout_width="@dimen/_16sdp"
                    android:layout_height="@dimen/_16sdp"
                    android:layout_margin="@dimen/_6sdp"
                    android:background="@drawable/circle"
                    android:gravity="center"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_settings"
                    android:tint="@color/primary" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/language_iv"
                    android:layout_width="@dimen/_16sdp"
                    android:layout_height="@dimen/_16sdp"
                    android:layout_margin="@dimen/_6sdp"
                    android:background="@drawable/circle"
                    android:gravity="center"
                    android:scaleType="centerInside"
                    android:src="@drawable/world"
                    android:tint="@color/primary" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/support_iv"
                    android:layout_width="@dimen/_16sdp"
                    android:layout_height="@dimen/_16sdp"
                    android:layout_margin="@dimen/_6sdp"
                    android:background="@drawable/circle"
                    android:gravity="center"
                    android:scaleType="centerInside"
                    android:src="@drawable/icon"
                    android:tint="@color/primary" />
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>