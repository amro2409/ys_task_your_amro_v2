<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/space_s"
    app:cardBackgroundColor="@color/surface_container_low"
    app:cardCornerRadius="@dimen/space_s">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:minHeight="@dimen/_40sdp"
        android:orientation="horizontal"
        android:padding="@dimen/space_s">


        <TextView
            android:id="@+id/item_name"
            style="@style/MyBodyLStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/space_s"
            android:layout_weight="1"
            android:textColor="@color/primary"
            android:fontFamily="@font/almarai_light"
            tools:text="1x Chicken" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/item_count"
            style="@style/MyBodyLStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="18"
            android:textColor="@color/primary"
            android:layout_marginEnd="@dimen/space_s"
             />

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>