<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:paddingVertical="@dimen/space_s"
    android:background="@drawable/item_card"
    android:layout_marginBottom="@dimen/space_s">

    <View
        android:id="@+id/item_st_indicator"
        android:layout_width="@dimen/space_xs"
        android:layout_height="match_parent"
        android:background="@color/holo_red"
        />

    <TextView
        android:id="@+id/item_qty_and_name"
        style="@style/MyBodyLStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/space_s"
        android:layout_weight="1"
        android:fontFamily="@font/almarai_light"
        tools:text="1x Chicken" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/item_processed_flg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_unchecked"
        android:layout_marginEnd="@dimen/space_s"
        />

</LinearLayout>